<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- VISTA FORMULARIO -->
        <record model="ir.ui.view" id="view_ficha_estadistica_xls_form">
            <field name="name">hemored_hemovigilancia.hemovigilancia</field>
            <field name="model">hemored_hemovigilancia.hemovigilancia</field>
            <field name="arch" type="xml">
                <form string="Hemovigilancia">
                    <sheet>
                        <div class="text-center">
                            <h1>
                                HEMOVIGILANCIA
                            </h1>
                        </div>
                            <group>
                                <field name="anho_id"  widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="periodo_id"  widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"
                                    domain="[('fiscalyear_id','=',anho_id)]"
                                />
                                <field name="diresa_id" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="tipo_banco"/>
                                <field name="institucion"/>
                                <field name="banco_id" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                            <footer>
                                <button name="print_excel" type="object" class="oe_highlight" string="Generar reporte"/>
                            </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- ACTION VIEW -->

        <!-- ACTION VIEW -->
        <record id="report_hemovigilancia_action" model="ir.actions.act_window">
            <field name="name">Reporte Hemovigilancia</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hemored_hemovigilancia.hemovigilancia</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="menu_report_hemovigilancia_action"
            name="Reporte Hemovigilancia"
            parent="hemored.menu_reportes"
            action="report_hemovigilancia_action"
            sequence="3" />

    </data>
</odoo>
