<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoria HEMORED -->
    <record id="module_category_hemored" model="ir.module.category">
        <field name="name">HEMORED - Stock de Hemocomponentes</field>
        <field name="sequence">301</field>
    </record>

    <record id="group_establecimiento_tipo_ii_hemored" model="res.groups">
        <field name="name">Bancos tipo II</field>
        <field name="category_id" ref="module_category_hemored"/>
    </record>

    <!-- Regal para que el Banco solo vea su registro (Bancos) -->
    <record id="regla_chbs_stock_hemocomponente" model="ir.rule">
        <field name="name">CHBS</field>
        <field name="model_id" ref="stock_hemocomponente.model_stock_hemocomponente_hemocomponente"/>
        <field name="domain_force">[('banco_id','=', user.banco_id.id)]</field>
        <field name="groups" eval="[(4, ref('hemored.group_coordinador_establecimiento_hemored'))]"/>
    </record>

    <!-- Regal para que la Diresa solo vea sus registros (Diresa) -->
    <record id="regla_diresa_banco_sangre_hemored_stock_hemocomponentes_diresa" model="ir.rule">
        <field name="name">DIRIS/DIRESA</field>
        <field name="model_id" ref="stock_hemocomponente.model_stock_hemocomponente_hemocomponente"/>
        <field name="domain_force">[('diresa_id','=', user.diresa_id.id)]</field>
        <field name="groups" eval="[(4, ref('hemored.group_coordinador_diris_diresa_hemored'))]"/>
    </record>

</odoo>
