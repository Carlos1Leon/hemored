<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

        <record id="hemored_supervision_record_supervision_form_inherit_calidad_m" model="ir.ui.view">
            <field name="name">hemored.banco_sangre.form.inherit.calidad.monitoreo</field>
            <field name="model">hemored_supervision.record_supervision</field>
            <field name="inherit_id" ref="hemored_supervision.hemored_supervision_record_supervision_form_inherit_proceso_m"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='proceso']" position="after">
                    <field name="p_cali_1" invisible="True"/>
                    <field name="g_cali_1" invisible="True"/>
                    <field name="p_cali_2" invisible="True"/>
                    <field name="g_cali_2" invisible="True"/>
                    <field name="p_cali_3" invisible="True"/>
                    <field name="g_cali_3" invisible="True"/>
                    <field name="p_cali_4" invisible="True"/>
                    <field name="g_cali_4" invisible="True"/>
                    <field name="p_cali_5" invisible="True"/>
                    <field name="g_cali_5" invisible="True"/>
                    <field name="p_cali_6" invisible="True"/>
                    <field name="g_cali_6" invisible="True"/>
                    <field name="p_cali_7" invisible="True"/>
                    <field name="g_cali_7" invisible="True"/>
                    <field name="p_cali_8" invisible="True"/>
                    <field name="g_cali_8" invisible="True"/>
                    <page string="SISTEMAS DE CALIDAD" id="calidad">
                        <group string="MEJORAMIENTO DEL PROCESO A TRAVES DE SISTEMAS DE CALIDAD: MEDIDAS PREVENTIVAS Y CORRECTIVAS">
                            <table class="table table-bordered mb64">
                                <tbody style="border: 1px solid #ccc;">
                                    <tr>
                                        <td style="width:15%;" align="center">
                                            DESCRIPCIÓN
                                        </td>
                                        <td style="width:10%;" align="center">
                                            MARCAR (SI o NO) / OPCIONES (SÍ HUBIERA)
                                        </td>
                                        <td style="width:20%;" align="center">
                                            OBSERVACIÓN
                                        </td>
                                        <td style="width:15%;" colspan="2" align="center">
                                            ESPECIFICAR / VERIFICADOR - RECOMENDACIONES
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:15%;" align="justify" colspan="4">
                                            A. Pruebas de Inmunohematología
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:15%;" align="justify">
                                            ¿Cuenta con un sistema de control de calidad interno en inmunohematologia?
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_1"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_1"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Indique cuál?
                                            Verificar
                                            Referencia: Criterio de Calidad EG05-CC01, literal C.
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:15%;" align="justify">
                                            ¿Participa en un programa de evaluación externa de desempeño en inmunohematologia?
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_2"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_2"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Indique cuál?
                                            Verificar
                                            Referencia: Criterio de Calidad EG05-CC01, literal B, 2do párrafo.
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:15%;" align="justify">
                                            ¿Realiza control de calidad a los reactivos de Inmunohematología?
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_3"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_3"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Verificar registros de Título y Avidez
                                            Solicitar el POE
                                        </td>
                                    </tr>
                                    <tr attrs="{'invisible': [('tipo_banco', '=', '1')]}">
                                        <td style="width:15%;" align="justify" colspan="4">
                                            B. Pruebas de Inmunoserología
                                        </td>
                                    </tr>
                                    <tr attrs="{'invisible': [('tipo_banco', '=', '1')]}">
                                        <td style="width:15%;" align="justify">
                                            ¿Cuenta con un sistema de control de calidad interno en inmunoserología?
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_4"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_4"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Indique cuál?
                                            Verificar
                                            Referencia: Criterio de Calidad EG05-CC01, literal C.
                                        </td>
                                    </tr>
                                    <tr attrs="{'invisible': [('tipo_banco', '=', '1')]}">
                                        <td style="width:15%;" align="justify">
                                            ¿Verifica sus gráficas de calidad? (Levey-Jennings, otras)
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_5"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_5"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Verificar
                                        </td>
                                    </tr>
                                    <tr attrs="{'invisible': [('tipo_banco', '=', '1')]}">
                                        <td style="width:15%;" align="justify">
                                            ¿Aplica las reglas de Westgard u otras para evidenciar probables errores?
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_6"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_6"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Verificar registro
                                        </td>
                                    </tr>
                                    <tr attrs="{'invisible': [('tipo_banco', '=', '1')]}">
                                        <td style="width:15%;" align="justify">
                                            ¿Registra las medidas  preventivas  y correctivas cuando amerita?
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_7"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_7"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Verificar cambios de lote, recalibración, etc.
                                        </td>
                                    </tr>
                                    <tr attrs="{'invisible': [('tipo_banco', '=', '1')]}">
                                        <td style="width:15%;" align="justify">
                                            ¿Participa en un programa de evaluación externa de desempeño en inmunoserologia?
                                        </td>
                                        <td style="width:10%;">
                                            <field name="cali_8"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                            <br/>
                                            <field name="t_cali_2_1" type="checkbox"
                                                   attrs="{
                                                   'readonly': [('state', 'in', ('terminado'))],
                                                   'invisible': [('cali_8', '!=', 'S')]
                                                   }"
                                            />
                                            <p attrs="{'invisible': [('cali_8', '!=', 'S')]}">INS</p>
                                            <br/>
                                            <field name="t_cali_2_2" type="checkbox"
                                                   attrs="{
                                                   'readonly': [('state', 'in', ('terminado'))],
                                                   'invisible': [('cali_8', '!=', 'S')]
                                                   }"
                                            />
                                            <p attrs="{'invisible': [('cali_8', '!=', 'S')]}">Segunda opinión</p>
                                            <br/>
                                            <field name="t_cali_2_3" type="checkbox"
                                                   attrs="{
                                                   'readonly': [('state', 'in', ('terminado'))],
                                                   'invisible': [('cali_8', '!=', 'S')]
                                                   }"
                                            />
                                            <p attrs="{'invisible': [('cali_8', '!=', 'S')]}">Tercera opinión</p>
                                        </td>
                                        <td style="width:15%;">
                                            <field name="obs_cali_8"
                                                   attrs="{'readonly': [('state', 'in', ('terminado'))]}"
                                            />
                                        </td>
                                        <td style="width:15%;" align="justify">
                                            Indique cuál?
                                            Verificar
                                            Referencia: Criterio de Calidad EG05-CC01, literal B, 1er párrafo.
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

   </data>
</odoo>
