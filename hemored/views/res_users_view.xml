<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tz']" position="after">
                    <field name="diresa_id"
                           string="DIRIS/DIRESA/GERESA"
                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="banco_id"
                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                           domain="[('diresa_id','=',diresa_id)]"/>
                </xpath>
                <xpath expr="//field[@name='login']" position="after">
                    <label for="email" class="oe_edit_only" string="Email"/>
                    <h2><field name="email" required="True"/></h2>
                </xpath>
                <xpath expr="//label[@for='login']" position="replace">
                    <label for="login" class="oe_edit_only" string="Usuario"/>
                </xpath>
            </field>
        </record>

        <!-- VISTA TREE -->
        <record model="ir.ui.view" id="hemored_res_users_tree_view">
            <field name="name">hemored.res.users.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="diresa_id" string="DIRIS/DIRESA/GERESA"/>
                </tree>
            </field>
        </record>

        <!-- VISTA FORMULARIO -->
        <record model="ir.ui.view" id="hemored_res_users_form_view">
            <field name="name">hemored.res.users.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image_medium"}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                            <label for="email" class="oe_edit_only" string="Email"/>
                            <field name="email" required="1"/>
                            <label for="login" class="oe_edit_only" string="Usuario"/>
                            <h2><field name="login"/></h2>
                            <label for="diresa_id" class="oe_edit_only" string="DIRIS/DIRESA/GERESA"/>
                            <h2><field name="diresa_id" required="True"/></h2>
                            <group>
                                <field name="partner_id" readonly="1" required="0" groups="base.group_no_one" attrs="{'invisible': [('id', '=', False)]}"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

       <!-- ACTION VIEW -->
        <record model="ir.actions.act_window" id="hemored_res_users_action">
            <field name="name">Usuarios DIRIS/DIRESA/GERESA</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('diresa_id', '!=', False), ('banco_id', '=', False)]</field>
        </record>
        <record model="ir.actions.act_window.view" id="hemored_res_users_action_form">
            <field name="act_window_id" ref="hemored_res_users_action"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hemored_res_users_form_view"/>
        </record>
        <record model="ir.actions.act_window.view" id="hemored_res_users_action_tree">
            <field name="act_window_id" ref="hemored_res_users_action"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hemored_res_users_tree_view"/>
        </record>


        <!-- MENU USUARIOS PARA PRONAHEBAS -->
        <menuitem id="menu_hemored_res_users"
                  name="Usuarios DIRIS/DIRESA/GERESA"
                  parent="menu_main"
                  action="hemored_res_users_action"
                  groups="hemored.group_administrador"
                  sequence="4"
        />

    </data>
</odoo>
