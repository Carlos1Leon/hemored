<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- VIEW GRAPH  -->
        <record id="hemored_ficha_donacion_sangre_total_line_graph_view" model="ir.ui.view">
            <field name="name">Donación sangre total</field>
            <field name="model">hemored.ficha_donacion_sangre_total.line</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="diresa_id" type="row"/>
                </graph>
            </field>
        </record>

       <!-- VIEW PIVOT  -->
        <record model="ir.ui.view" id="hemored_ficha_donacion_sangre_total_line_pivot_view">
            <field name="name">Donación sangre total</field>
            <field name="model">hemored.ficha_donacion_sangre_total.line</field>
            <field name="arch" type="xml">
                <pivot string="Donacione sangre total">
                    <field name="diresa_id" type="row"/>
                    <field name="tipo_donante" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="hemored_sangre_total_report_tree" model="ir.ui.view">
            <field name="name">hemored.sangre.total.reporte.tree</field>
            <field name="model">hemored.ficha_donacion_sangre_total.line</field>
            <field name="arch" type="xml">
                <tree string="Donación sangre total" create="0" edit="0" duplicate="0">
                    <field name="banco_id"/>
                    <field name="diresa_id"/>
                    <field name="tipo_banco"/>
                    <field name="institucion"/>
                </tree>
            </field>
        </record>

        <!-- VISTA FORMULARIO -->
        <record id="hemored_sangre_total_report_form" model="ir.ui.view">
            <field name="name">hemored.sangre.total_report.form</field>
            <field name="model">hemored.ficha_donacion_sangre_total.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Donación sangre total" create="0" edit="0" duplicate="0">
                    <sheet>
                        <group>
                            <field name="banco_id"/>
                            <field name="diresa_id"/>
                            <field name="tipo_banco"/>
                            <field name="institucion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION VIEW -->
        <record id="hemored_sangre_total_report_action" model="ir.actions.act_window">
            <field name="name">Donación sangre total</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hemored.ficha_donacion_sangre_total.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph,tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="menu_donacion_sangre_total_reporte"
            name="Donación sangre total"
            parent="menu_main_report"
            action="hemored_sangre_total_report_action"
            sequence="5" />

    </data>
</odoo>
