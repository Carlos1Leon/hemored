<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- VIEW GRAPH  -->
        <record id="hemored_produccion_hemocomponente_line_graph_view" model="ir.ui.view">
            <field name="name">Hemocomponentes</field>
            <field name="model">hemored.ficha_produccion_hemocomponente.line</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="diresa_id" type="row"/>
                </graph>
            </field>
        </record>

       <!-- VIEW PIVOT  -->
        <record model="ir.ui.view" id="hemored_produccion_hemocomponente_line_pivot_view">
            <field name="name">Hemocomponentes</field>
            <field name="model">hemored.ficha_produccion_hemocomponente.line</field>
            <field name="arch" type="xml">
                <pivot string="Hemocomponentes">
                    <field name="diresa_id" type="row"/>
                    <field name="hemocomponente" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="hemored_ficha_produccion_hemocomponente_line_report_tree" model="ir.ui.view">
            <field name="name">hemored.ficha.produccion.hemocomponente.line.report.tree</field>
            <field name="model">hemored.ficha_produccion_hemocomponente.line</field>
            <field name="arch" type="xml">
                <tree string="Hemocomponentes" create="0" edit="0" duplicate="0">
                    <field name="banco_id"/>
                    <field name="diresa_id"/>
                    <field name="tipo_banco"/>
                    <field name="institucion"/>
                </tree>
            </field>
        </record>

        <!-- VISTA FORMULARIO -->
        <record id="view_hemored_ficha_produccion_hemocomponente_line_report_form" model="ir.ui.view">
            <field name="name">hemored.ficha_produccion_hemocomponente.line_report.form</field>
            <field name="model">hemored.ficha_produccion_hemocomponente.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Hemocomponentes" create="0" edit="0" duplicate="0">
                    <sheet>
                        <group>
                            <field name="banco_id"/>
                            <field name="diresa_id"/>
                            <field name="tipo_banco"/>
                            <field name="institucion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION VIEW -->
        <record id="hemored_produccion_hemocomponente_line_action" model="ir.actions.act_window">
            <field name="name">Hemocomponentes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hemored.ficha_produccion_hemocomponente.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph,tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="menu_produccion_hemocomponente_reporte"
            name="Hemocomponentes"
            parent="menu_main_report"
            action="hemored_produccion_hemocomponente_line_action"
            sequence="8" />

    </data>
</odoo>
