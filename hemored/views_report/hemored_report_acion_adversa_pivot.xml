<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- VIEW GRAPH  -->
        <record id="hemored_ficha_causa_reaccion_adversa_line_graph_view" model="ir.ui.view">
            <field name="name">Causa Reacción Adversa</field>
            <field name="model">hemored.ficha_causa_reaccion_adversa.line</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="diresa_id" type="row"/>
                </graph>
            </field>
        </record>

       <!-- VIEW PIVOT  -->
        <record model="ir.ui.view" id="hemored_ficha_causa_reaccion_adversa_line_pivot_view">
            <field name="name">Causa Reacción Adversa</field>
            <field name="model">hemored.ficha_causa_reaccion_adversa.line</field>
            <field name="arch" type="xml">
                <pivot string="Causa reacción adversa">
                    <field name="diresa_id" type="row"/>
                    <field name="tipo_reaccion_adversa" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="hemored_reaccion_adversa_report_tree" model="ir.ui.view">
            <field name="name">hemored.reaccion.adversa.reporte.tree</field>
            <field name="model">hemored.ficha_causa_reaccion_adversa.line</field>
            <field name="arch" type="xml">
                <tree string="Causa reacción adversa" create="0" edit="0" duplicate="0">
                    <field name="banco_id"/>
                    <field name="diresa_id"/>
                    <field name="tipo_banco"/>
                    <field name="institucion"/>
                </tree>
            </field>
        </record>

        <!-- VISTA FORMULARIO -->
        <record id="hemored_reaccion_adversa_report_form" model="ir.ui.view">
            <field name="name">hemored.reaccion.adversa_report.form</field>
            <field name="model">hemored.ficha_causa_reaccion_adversa.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Causa reacción adversa" create="0" edit="0" duplicate="0">
                    <sheet>
                        <group>
                            <field name="banco_id"/>
                            <field name="diresa_id"/>
                            <field name="tipo_banco"/>
                            <field name="institucion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION VIEW -->
        <record id="hemored_reaccion_adversa_report_action" model="ir.actions.act_window">
            <field name="name">Causa Reacción Adversa</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hemored.ficha_causa_reaccion_adversa.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph,tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="menu_reaccion_adversa_reporte"
            name="Causa Reacción Adversa"
            parent="menu_main_report"
            action="hemored_reaccion_adversa_report_action"
            sequence="9"/>

    </data>
</odoo>
