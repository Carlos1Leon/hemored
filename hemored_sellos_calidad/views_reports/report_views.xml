<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_report_sellos_excel_wizard" model="ir.ui.view">
            <field name="name">Consolidado Sellos de Calidad</field>
            <field name="model">stock_sellos.report_excel</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <div class="col-xs-12 text-center">
                        <p>Consolidado Sellos de Calidad</p>
                    </div>
                    <group>
                        <field name="consolidated"/>
                        <field name="is_period"/>
                    </group>
                    <group attrs="{'invisible': [('is_period', '=', False)]}">
                        <field name="anho_id"
                            options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                               attrs="{'required': [('is_period', '=', True)]}"
                        />
                    </group>
                    <group attrs="{'invisible': [('is_period', '=', False)]}">
                        <group>
                            <field name="periodo_inicio_id"
                                   attrs="{'required': [('is_period', '=', True)]}"
                                   domain="[('fiscalyear_id','=',anho_id)]"
                                   options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                            />
                        </group>
                        <group>
                            <field name="periodo_fin_id"
                                   domain="[('fiscalyear_id','=',anho_id)]"
                                   options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                            />
                        </group>
                    </group>
                    <group attrs="{'invisible': [('is_period', '=', True)]}">
                        <group>
                            <field name="date_start" attrs="{'required': [('is_period', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="date_stop" attrs="{'required': [('is_period', '=', False)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_excel" type="object" class="oe_highlight" string="Generar reporte"/>
                    </footer>
              </form>
            </field>
     	</record>

        <record id="stock_sellos_report_excel_action" model="ir.actions.act_window">
            <field name="name">Consolidado Sellos de Calidad</field>
            <field name="res_model">stock_sellos.report_excel</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
