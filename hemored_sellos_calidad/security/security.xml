<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoria HEMORED -->
    <record id="module_category_hemored" model="ir.module.category">
        <field name="name">HEMORED - Sellos de Calidad</field>
        <field name="sequence">301</field>
    </record>

    <record id="group_establecimiento_tipo_ii_sellos_calidad_hemored" model="res.groups">
        <field name="name">Bancos tipo II Sellos de Calidad</field>
        <field name="category_id" ref="module_category_hemored"/>
    </record>

    <!-- Regal para que el Banco solo vea su registro (Bancos) -->
    <record id="regla_chbs_registro_sellos" model="ir.rule">
        <field name="name">CHBS</field>
        <field name="model_id" ref="hemored_sellos_calidad.model_hemored_sellos_calidad_registro"/>
        <field name="domain_force">[('banco_id','=', user.banco_id.id)]</field>
        <field name="groups" eval="[(4, ref('hemored.group_coordinador_establecimiento_hemored'))]"/>
    </record>

</odoo>